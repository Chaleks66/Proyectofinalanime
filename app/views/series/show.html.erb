<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @serie.name %>
</p>

<p>
  <strong>Year:</strong>
  <%= @serie.year %>
</p>


<p>
  <strong>Status:</strong>
  <%= @serie.status %>
</p>

<p>
  <strong>Img:</strong>
  <%= @serie.img %>
</p>

<%= link_to 'Edit', edit_serie_path(@serie) %> |
<%= link_to 'Back', series_path %>



<h3>Comments: </h3>
<% if @serie.comments %>
    
  <% @serie.comments.each do |post| %>
    
    <div class="card" style="width: 18rem;">    
      <h5 class="card-body"><%= post.content %></h5>
    </div>

  <% end %>

<% else %>

  <div class="card" style="width: 18rem;">    
    <h5 class="card-body">Sin comentarios</h5>
  </div>  

<% end %>

<%= link_to "Add Comment", new_serie_comment_path(serie_id: @serie.id) %>

